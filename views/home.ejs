<%- include("partial/head") %>
<%- include("partial/sidebar_left") %>
<div id="bdy">
<% for(let post of posts){ %> 
  
    <div class="card mb-4 posts shadow-sm" style="margin: auto; border-radius: 10px;" >
        <div class="card-body">
          <div class="card-title mb-2" style="border-bottom: rgba(166, 168, 168, 0.788) 1px solid;">
            
            <div class="m-0 p-0">
              <a href="/post/<%=post._id%>" class='m-0 p-0 ' style="color: black; display: inline-block;">
                <p class='m-0 p-0' style="font-size:large; font-weight: bold;"><%=post.title%></p>
              </a>
        
              <i class="fa fa-edit" aria-hidden="true" style=" float:right;"></i>
            </div>
            <p class="m-0 p-0 pb-2" style="font-size: small; color: rgb(110, 106, 106);"><%=timeAgo.format((post.createdAt.getTime()))%></p>
          </div>
          <div class="card-text m-2 p-2">
          <p ><%- post.description %></p>

          <% if(post.image.length>0){%>
            <div id="carouselPosts" class="carousel slide" data-ride="carousel">
              <div class="carousel-inner">
            <% post.image.forEach((img,i) => {%>
              <div class="carousel-item <%= i===0?'active':'' %> ">
                <img src="<%=img.url%> " class="d-block w-100" alt="...">
              </div>
            <%})%>
        </div>
        <%   if(post.image.length>1) {%>
        <a class="carousel-control-prev" href="#carouselPosts" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselPosts" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <%}%>
      </div>
         
       <%}%>
        </div>
        <a class="btn btn-outline-info" href="/post/<%=post._id%>" role="button">See The Comments</a>
          <div style="float: right;"><a class="d-flex" href="/profile/<%=post.author._id%>"><img src="<%=post.author.image.url %>" class="avatar1" >
          <p class="card-text ml-2" style="font-size: smaller;"><b><%= post.author.name %></b></p>
        </a>
          </div>
        </div>
        
      </div>
    
    <%}%>
</div>
<%- include("partial/sidebar_right") %>
<%- include("partial/foot") %>



<div id="carouselPosts" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item">
      <img src="..." class="d-block w-100" alt="...">
    </div>
  
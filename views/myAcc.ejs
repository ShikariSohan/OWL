<%- include("partial/head") %>
<%- include("partial/sidebar_left") %>
    <div class="card p-4 w-50 m-auto">
      <% if(user) {%> 
        <% if(user._id.equals(currentUser._id)){ %>
          <form action="/profile/<%=user._id%>" method="POST">
            <button class="btn btn-primary d-none" type="submit"> save changes</button>
            <br>
          <label for="avatar">
            <p>Change Profile Picture</p>
          </label>
          <input type="file" name="avatar" id="" accept="image/*" onchange="loadFile(event)">
          <img src="<%=user.avatar.url %>" class="avatar img-fluid" id="dp">
       
        
        <p class="m-auto p-4"><i><a href="https://www.youtube.com/watch?v=y9Trdafp83U">Current student of SUST</a></i></p>
        <div class="card-body">
          <h2 class="card-title"> <%=user.name %></h2>
          <p class="card-title"><b>Email: </b><%=user.email %></p>
          <p class="card-title"><b> 
            <label for="password">Change Password: </label>
            <input type="password" name="password" id="pass" onfocus="appearSubmit(event)"> </p>
          </form>
          <% } else{%>
            <img src="<%=user.avatar.url %>" class="avatar img-fluid" id="dp">
            <p class="m-auto p-4"><i><a href="https://www.youtube.com/watch?v=y9Trdafp83U">you tell me?</a></i></p>
            <div class="card-body">
          <h2 class="card-title"> <%=user.name %></h2>
          <p class="card-title"><b>Email: </b><%=user.email %></p>
            <%}%>
          <p class="card-title"><b>Department: </b><%=user.department%></p>  
          <p class="card-title"><b>Registration: </b><%=user.reg%></p>  
          <p class="card-title"><b>Contribuition:</b> 0</p>  
               
        </div>
      </div>

<% } %> 
<%- include("partial/scripts") %>
<script>
   let loadFile = function(event) {
     $('button').removeClass('d-none');
    let reader = new FileReader();
    reader.onload = function(){
      let output = document.getElementById('dp');
      output.src = reader.result;
    };
    reader.readAsDataURL(event.target.files[0]);
  };
  function appearSubmit(event)
  {
    $('button').removeClass('d-none');
  }
</script>
